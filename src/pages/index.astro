---
import { getCollection } from 'astro:content';
import Layout from "../layouts/Layout.astro";
import Card from "@components/Card.astro";

const portfolios = (await getCollection('portfolio'))
---

<Layout title="Welcome to Astro.">
  <main class="p-5">
    <h1 class="pt-10 text-center font-mono text-6xl font-semibold">
      qonitfilza
    </h1>
    <h2 class="text-center font-sans text-2xl font-normal">- work sample -</h2>

    <section class="grid grid-cols-3 gap-5 pt-20">
      {portfolios.map((portfolio) => <Card slug={portfolio.slug} {...portfolio.data} />)}
    </section>
  </main>
</Layout>
