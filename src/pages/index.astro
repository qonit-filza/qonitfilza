---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Card from "@components/Card.astro";
import CardContainer from "@components/CardContainer";

const data = await getCollection("portfolio");
const portfolios = data.sort((a, b) => a.data.id - b.data.id);
---

<Layout title="qonitfilza">
  <main class="py-20">
    <h1 class="text-center font-ar-one text-6xl font-semibold">qonitfilza</h1>
    <h2 class="text-center font-ar-one text-2xl font-normal">work-sample</h2>

    <section
      class="grid grid-cols-1 gap-5 pl-2 pr-6 pt-20 md:grid-cols-3 md:px-0"
    >
      {
        portfolios.map((portfolio) => (
          <CardContainer slug={portfolio.slug} client:load>
            <Card slug={portfolio.slug} {...portfolio.data} />
          </CardContainer>
        ))
      }
    </section>
  </main>
</Layout>
